NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<db_user>:<db_pass>@<cluster>/<db_name>?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace_with_a_strong_secret

# Optional: used in some auth/callback flows
CLIENT_URL=http://localhost:5173

# Superadmin seed (optional)
